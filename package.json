{
  "name": "budibase-mcp-server",
  "version": "1.0.0",
  "description": "Model Context Protocol server for Budibase integration",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsx watch src/index.ts",
    "test": "node tests/suite.js",
    "setup": "bash scripts/setup.sh",
    "lint": "biome check src/",
    "lint:fix": "biome check --write src/",
    "format": "biome format --write src/",
    "knip": "knip",
    "jscpd": "jscpd",
    "gitleaks": "gitleaks detect --no-banner",
    "check": "tsc --noEmit && biome check src/ && knip && jscpd && gitleaks detect --no-banner",
    "prepare": "lefthook install"
  },
  "keywords": [
    "mcp",
    "budibase",
    "ai",
    "integration"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "axios": "^1.6.0",
    "axios-retry": "^4.5.0",
    "date-fns": "^4.1.0",
    "dotenv": "^16.3.0",
    "mathjs": "^15.1.0",
    "node-cache": "^5.1.2",
    "p-map": "^7.0.4",
    "papaparse": "^5.5.3",
    "winston": "^3.11.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.14",
    "@types/node": "^20.10.0",
    "@types/papaparse": "^5.5.2",
    "jscpd": "^4.0.8",
    "knip": "^5.83.0",
    "lefthook": "^2.1.0",
    "tsx": "^4.6.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
